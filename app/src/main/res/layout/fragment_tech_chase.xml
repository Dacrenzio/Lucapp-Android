<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B2B2B"
        android:scrollbars="vertical">

        <TableLayout
            android:id="@+id/tableTech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/background_light"
            android:padding="1dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00DAC9"
                android:padding="15dp">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tumble Percenteges"
                    android:textStyle="bold">

                </TextView>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableTechrows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTech"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:background="@android:color/background_light"
            android:padding="1dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#38491A"
                android:padding="8dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="rage"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="150"
                    android:textColor="@android:color/background_light" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#38491A"
                android:padding="8dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Move"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@android:color/background_light" />
            </TableRow>

            <TableRow
                android:id="@+id/sweetZair"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#FFF6A6"
                android:padding="15dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Sweet Zair" />
            </TableRow>

            <TableRow
                android:id="@+id/sourZair"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#75FFC4"
                android:padding="15dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Sour Zair" />
            </TableRow>

            <TableRow
                android:id="@+id/sourfair"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#FFF6A6"
                android:padding="15dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Sour F-Air" />
            </TableRow>

            <TableRow
                android:id="@+id/sourftilt"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#75FFC4"
                android:padding="15dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Sour F-Tilt" />
            </TableRow>

            <TableRow
                android:id="@+id/sourbair"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="#FFF6A6"
                android:padding="15dp">

                <TextView
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="SH sour B-Air" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableuthrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTechrows"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/background_light"
            android:padding="1dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00DAC9"
                android:padding="15dp">

                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="-25dp"
                    android:gravity="left"
                    android:text="Up-Throw granted tech chase"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/battlefieldRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFF6A6"
                android:padding="15dp">

                <TextView
                    android:layout_weight="2"
                    android:text="Battlefield"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/yoshiRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#75FFC4"
                android:padding="15dp">

                <TextView
                    android:layout_weight="2"
                    android:text="Yoshi's Story"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/townRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFF6A6"
                android:padding="15dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Town&amp;City"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>


    </RelativeLayout>
</ScrollView>